<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Admin Dashboard' %> | West Degree</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <!-- Admin CSS -->
    <link rel="stylesheet" href="/css/admin.css">
    
    <!-- Admin Responsive CSS -->
    <link rel="stylesheet" href="/css/admin-responsive.css">
    
    <!-- Additional CSS from page -->
    <% if (typeof extraCSS !== 'undefined') { %>
        <% extraCSS.forEach(function(css) { %>
            <link rel="stylesheet" href="<%= css %>">
        <% }); %>
    <% } %>
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle d-md-none" aria-label="Toggle sidebar">
        <i class="fas fa-bars"></i>
    </button>
    
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay"></div>
    
    <!-- Main Container -->
    <div class="container-fluid p-0">
        <!-- Content starts in sidebar and main-content partials -->