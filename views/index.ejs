    <script>
document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.getElementById('contact-form');
    
    if (contactForm) {
        console.log('Contact form found:', contactForm);
        
        // Remove any existing jQuery validation submit handler
        if (typeof $ !== 'undefined') {
            $(contactForm).off('submit');
        }
        
        contactForm.addEventListener('submit', function(e) {
            e.preventDefault(); // Prevent default form submission
            console.log('Form submitted via JavaScript');
            
            // Get form data using traditional method instead of FormData
            const formElements = contactForm.elements;
            const formData = {};
            
            // Extract all form data
            for (let i = 0; i < formElements.length; i++) {
                const element = formElements[i];
                if (element.name && element.type !== 'submit') {
                    formData[element.name] = element.value || '';
                }
            }
            
            // Debug: Log all form data
            console.log('Form data being sent:', formData);
            
            // Validate required fields
            if (!formData.conName || !formData.conEmail || !formData.conMessage) {
                showContactMessage('Please fill in all required fields (Name, Email, and Message).', false);
                return;
            }
            
            // Email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(formData.conEmail)) {
                showContactMessage('Please enter a valid email address.', false);
                return;
            }
            
            const submitButton = contactForm.querySelector('button[type="submit"]');
            const originalButtonText = submitButton ? submitButton.innerHTML : 'Send Message';
            
            if (submitButton) {
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
                submitButton.disabled = true;
            }
            
            // Clear any existing messages
            const existingAlert = document.getElementById('contactFeedback');
            if (existingAlert) {
                existingAlert.remove();
            }
            
            // Send as URL-encoded form data
            const urlEncodedData = Object.keys(formData)
                .map(key => encodeURIComponent(key) + '=' + encodeURIComponent(formData[key]))
                .join('&');
            
            fetch('/contact', {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: urlEncodedData
            })
            .then(response => {
                console.log('Response status:', response.status);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('Contact form response:', data);
                
                if (data.success) {
                    showContactMessage(data.message || 'Thank you for your message! We will get back to you soon.', true);
                    contactForm.reset(); // Clear form on success
                } else {
                    showContactMessage(data.message || 'Failed to send message. Please try again.', false);
                }
            })
            .catch(error => {
                console.error('Contact form error:', error);
                showContactMessage('An error occurred while sending your message. Please try again.', false);
            })
            .finally(() => {
                // Reset button state
                if (submitButton) {
                    submitButton.innerHTML = originalButtonText;
                    submitButton.disabled = false;
                }
            });
        });
    } else {
        console.error('Contact form not found!');
    }
    
    function showContactMessage(message, isSuccess) {
        // Remove any existing alerts first
        const existingAlerts = document.querySelectorAll('#contactFeedback');
        existingAlerts.forEach(alert => alert.remove());
        
        const alertDiv = document.createElement('div');
        alertDiv.id = 'contactFeedback';
        alertDiv.className = `alert alert-${isSuccess ? 'success' : 'danger'} alert-dismissible fade show`;
        alertDiv.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999; max-width: 400px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
        alertDiv.innerHTML = `
            <i class="fas fa-${isSuccess ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        `;
        
        document.body.appendChild(alertDiv);
        
        // Auto-hide after 5 seconds
        setTimeout(() => {
            if (alertDiv && alertDiv.parentNode) {
                try {
                    if (typeof bootstrap !== 'undefined') {
                        const bsAlert = new bootstrap.Alert(alertDiv);
                        bsAlert.close();
                    } else {
                        alertDiv.remove();
                    }
                } catch (e) {
                    alertDiv.remove();
                }
            }
        }, 5000);
    }
});
</script>

