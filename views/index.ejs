<!-- Contact Form Feedback Messages -->
<% if (typeof contactMessage !== 'undefined' && contactMessage) { %>
    <div id="contactFeedback" class="alert alert-<%= contactSuccess ? 'success' : 'danger' %> alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 9999; max-width: 400px;">
        <i class="fas fa-<%= contactSuccess ? 'check-circle' : 'exclamation-triangle' %>"></i>
        <%= contactMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <script>
        // Auto-hide the message after 5 seconds
        setTimeout(function() {
            const alert = document.getElementById('contactFeedback');
            if (alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 5000);
    </script>
<% } %>

